generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CaseStatus {
  ACTIVE
  CLOSED
  PUBLIC
}

enum UserNotificationType {
  INVITED_TO_CASE
}

model Case {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  status      CaseStatus
  userId      String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  tags        String[]
  persons     Person[]
  vehicles    Vehicle[]
  locations   Location[]
}

model UserNotification {
  id        Int                  @id @default(autoincrement())
  title     String
  content   String
  type      UserNotificationType
  caseId    String
  userId    String
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model Person {
  id          Int       @id @default(autoincrement())
  firstName   String
  lastName    String
  description String?
  dateOfBirth DateTime?
  gender      String?
  nationality String?
  address     String?
  phone       String?
  email       String?
  thumbnail   String? 
  case        Case      @relation(fields: [caseId], references: [id])
  caseId      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Vehicle {
  id           Int       @id @default(autoincrement())
  make         String
  model        String
  description String?
  year         Int?
  color        String?
  licensePlate String
  vin          String?
  thumbnail    String? 
  case         Case      @relation(fields: [caseId], references: [id])
  caseId       Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Location {
  id        Int       @id @default(autoincrement())
  name      String
  address   String
  description String?
  latitude  Float?
  longitude Float?
  thumbnail String? 
  case      Case      @relation(fields: [caseId], references: [id])
  caseId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}